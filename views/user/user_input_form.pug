extends ../layout

block content
    h3 add user:
    form(action='/user/update_input_form/' + user.id, method='post')
      div
        input(type='text', name='name', value=user.name, readonly)
      div
        input(type='text', name='comment', value=user.comment, readonly)
      div
        input(type='submit', value='update user')

      div !{JSON.stringify(user)}
